<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>

        .table {
            display: inline-block;
            width: auto;
            float: left;
            clear: both;
        }

        .col {
            position: relative;
            display: block;
            float: left;
            text-align: center;
            font-size: 0px;
            height: auto;
            width: 30%;
            padding-bottom: 30%;
        }

        .row {
            padding-top: 3px;
            padding-bottom: 3px;
            padding-right: 15px;
            padding-left: 15px;
            clear: right;
            font-size: 1rem;
        }

        .info {
            display: inline-block;
            height: 50%;
            position: inherit;
            top:190px;
        }

        .imgContainer {
            display: block;
            height: 33%;
            position: inherit;
            top: 0;
        }

        .productImg {
            width: 100%;
            height: 200%;
        }

        .imgDiv {
            display: inline-block;
            left: 0;
            position: absolute;
            width: 100%;
            height: auto;
            top: auto;
        }

        #blankimg {
            top: 0;
            left: 0;
            position: absolute;
            width: 100%;
            height: 100%;
            padding-bottom: 10px;
            padding-right: 5px;
            padding-left: 5px;
        }

        .ratingimg {
            padding-right: 5px;
            padding-left: 5px;
            max-width: 80px;
        }

        h1 {
            text-align: center;
        }

        body {
            height: auto;
        }

        #top {
            padding: 10px;
        }

        .rowNames {
            float: left;
            display: inline-block;
            position: inherit;
            top: 100px;
        }

        .red {
            color: darkred;
        }

        .bestSeller {
            font-weight: bold;
        }

        .large {
            font-size: 22px;
        }

        .clear {
            display: inline-block;
            float: left;
            clear: left;
        }
    </style>

    <title></title>
</head>
<body>

    <h1>Toys</h1>
    @{
        int count = 0;
    }

    @foreach (var toy in Model)
    {
        if (count % 3 == 0)
        {
            <div class="clear"></div>
        }
        <div class="col">
            <div class="imgContainer">
                <a href="@Url.Action("Detail", "Product", new { id = toy.ProductId }, null)">
                    <div class="imgDiv"><img class="productImg" src="~/Content/images/@(toy.ImageName)" /> </div>
                </a>
            </div>
            <div class="info">
                <div class="row top">@Html.ActionLink((string)toy.Name, "Detail", "Product", new { id = toy.ProductId }, null) </div>
                <div class="row"> @toy.Manufacturer                     </div>
                <div class="row red large">$@toy.Price                  </div>
                <div class="row"><b>Weight</b> @toy.WeightIbLbs lbs     </div>
                <div class="row">
                    @if (toy.AverageRating >= 4.5)
                    {
                        <img class="ratingimg" src="~/Content/images/5-star.png" />
                    }
                    @if (toy.AverageRating >= 3.5 && toy.AverageRating < 4.5)
                    {
                        <img class="ratingimg" src="~/Content/images/4-star.png" />
                    }
                    @if (toy.AverageRating >= 2.5 && toy.AverageRating < 3.5)
                    {
                        <img class="ratingimg" src="~/Content/images/3-star.png" />
                    }
                    @if (toy.AverageRating >= 1.5 && toy.AverageRating < 2.5)
                    {
                        <img class="ratingimg" src="~/Content/images/2-star.png" />
                    }
                    @if (toy.AverageRating >= 0 && toy.AverageRating < 1.5)
                    {
                        <img class="ratingimg" src="~/Content/images/1-star.png" />
                    }
                </div>
            </div>
        </div>
        count++;

    }



</body>
</html>

