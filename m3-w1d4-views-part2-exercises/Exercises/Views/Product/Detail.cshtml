
@using Exercises.Models
@model Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>

        .row {
            padding-top: 3px;
            padding-bottom: 3px;
            padding-right: 15px;
            padding-left: 15px;
            clear: right;
            font-size: 1rem;
        }

        .info {
            display: inline-block;
            float: left;
        }

        .productImg {
            width: 100%;
            height: 100%;
        }

        .imgDiv {
            display: inline-block;
            width: 45%;
            height: auto;
            float: left;
        }

        .ratingimg {
            padding-right: 5px;
            padding-left: 5px;
            max-width: 80px;
        }

        h1 {
            text-align: center;
        }

        body {
            height: auto;
        }

        #top {
            padding: 10px;
        }

        .red {
            color: darkred;
        }

        .bestSeller {
            font-weight: bold;
        }

        .large {
            font-size: 22px;
        }

        .desc {
            overflow: auto;
        }
    </style>

    <title></title>
</head>
<body>

    <div class="imgDiv"><img class="productImg" src="~/Content/images/@(Model.ImageName)" /> </div>

    <div class="info">
        <div class="row top">@Model.Name </div>
        <div class="row"> @Model.Manufacturer                     </div>
        <div class="row red large">$@Model.Price                  </div>
        <div class="row"><b>Weight</b> @Model.WeightIbLbs lbs     </div>
        <div class="row">
            @if (Model.AverageRating >= 4.5)
            {
                <img class="ratingimg" src="~/Content/images/5-star.png" />
            }
            @if (Model.AverageRating >= 3.5 && Model.AverageRating < 4.5)
            {
                <img class="ratingimg" src="~/Content/images/4-star.png" />
            }
            @if (Model.AverageRating >= 2.5 && Model.AverageRating < 3.5)
            {
                <img class="ratingimg" src="~/Content/images/3-star.png" />
            }
            @if (Model.AverageRating >= 1.5 && Model.AverageRating < 2.5)
            {
                <img class="ratingimg" src="~/Content/images/2-star.png" />
            }
            @if (Model.AverageRating >= 0 && Model.AverageRating < 1.5)
            {
                <img class="ratingimg" src="~/Content/images/1-star.png" />
            }


        </div>
        </div>
        <div class="desc">
            @Model.Description
        </div>


</body>
</html>

